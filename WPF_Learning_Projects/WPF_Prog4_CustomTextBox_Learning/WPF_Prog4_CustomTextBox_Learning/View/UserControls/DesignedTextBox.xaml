<UserControl x:Class="WPF_Prog4_CustomTextBox_Learning.View.UserControls.DesignedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Prog4_CustomTextBox_Learning.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid Background="DarkGray">
        <TextBox x:Name="customTB" Background="Transparent" Foreground="White" VerticalContentAlignment="Center" FontSize="18" TextChanged="customTB_TextChanged"/>
        <TextBlock x:Name="contentHolder" Text="" Foreground="White" FontSize="18" VerticalAlignment="Center" Panel.ZIndex="-1" Margin="5,0,0,0"/>
        <Button x:Name="eraseBtn" Width="40" HorizontalAlignment="Right" Content="X" Background="Transparent" Foreground="White" Click="eraseBtn_Click"/>
    </Grid>
</UserControl>
