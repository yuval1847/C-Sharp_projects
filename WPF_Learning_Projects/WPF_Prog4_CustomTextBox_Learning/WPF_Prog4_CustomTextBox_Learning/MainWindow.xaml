<Window x:Class="WPF_Prog4_CustomTextBox_Learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Prog4_CustomTextBox_Learning"
        xmlns:userControls="clr-namespace:WPF_Prog4_CustomTextBox_Learning.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Login" FontSize="40" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Impact"/>
        <userControls:DesignedTextBox Grid.Row="1" Width="300" Height="40" Placeholder="Username"/>
        <userControls:DesignedTextBox Grid.Row="2" Width="300" Height="40" Placeholder="Password"/>
        <Button Grid.Row="3" Content="Login" Width="150" Height="40" Background="RoyalBlue" Foreground="White" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
