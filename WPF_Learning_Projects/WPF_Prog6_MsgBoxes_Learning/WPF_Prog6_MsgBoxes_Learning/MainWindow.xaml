<Window x:Class="WPF_Prog6_MsgBoxes_Learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Prog6_MsgBoxes_Learning"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Width="150" Height="50" Content="Alert Msg" Click="AlertBtn_Click"/>
        <Button Grid.Row="0" Grid.Column="1" Width="150" Height="50" Content="Error Msg" Click="ErrorBtn_Click"/>
        <Button Grid.Row="1" Grid.Column="0" Width="150" Height="50" Content="Info Msg" Click="InfoBtn_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Width="150" Height="50" Content="Question Msg" Click="QuestionBtn_Click"/>
    </Grid>
</Window>
