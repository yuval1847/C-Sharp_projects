<UserControl x:Class="ExtremLink_Client_v2.Pages.ForgoPasswordPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremLink_Client_v2.Pages"
             xmlns:customWidgets="clr-namespace:ExtremLink_Client_v2.CustomWidgets" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#031019" Offset="0"/>
                <GradientStop Color="#034045" Offset="0.5"/>
                <GradientStop Color="#026F71" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel>
            <TextBlock Text="Forgot Password" FontSize="60" FontWeight="Bold" Foreground="#00CEC9" HorizontalAlignment="Center" Margin="0,50,0,0"/>
            <TextBlock Text="Enter you username and then enter the PIN code&#x0a;that you received to your email!" TextAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#00CEC9" HorizontalAlignment="Center" Margin="0,10,0,0"/>

            <Grid x:Name="username_grid" Width="252" Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Images/user_icon.png" HorizontalAlignment="Left" Width="25" Margin="15,30,0,31" Visibility="Visible" RenderTransformOrigin="0.794,0.563"/>
                <customWidgets:CustomTextBox Grid.Column="1" x:Name="usernameCustomTextBox" Placeholder="Username" Width="200" Height="40" Margin="0,20,0,30"/>
            </Grid>

            <Button x:Name="SendPINCodeBtn" Content="Send PIN Code" Width="220" Height="55" Background="#034045" Foreground="White"
                FontSize="22" BorderThickness="2" Cursor="Hand" BorderBrush="#00CEC9"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Consolas" Margin="0,0,0,15" Click="LoginButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#00CEC9" BlurRadius="20" ShadowDepth="0"/>
                </Button.Effect>
            </Button>

            <Grid x:Name="pin_grid" Width="252" Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <!-- Add here a PIN code icon-->
                <Image Source="/Images/user_icon.png" HorizontalAlignment="Left" Width="25" Margin="15,30,0,31" Visibility="Visible" RenderTransformOrigin="0.794,0.563"/>
                <customWidgets:CustomTextBox Grid.Column="1" x:Name="pinCodeCustomTextBox" Placeholder="PIN" Width="200" Height="40" Margin="0,20,0,30"/>
            </Grid>
            
        </StackPanel>
    </Grid>
</UserControl>
