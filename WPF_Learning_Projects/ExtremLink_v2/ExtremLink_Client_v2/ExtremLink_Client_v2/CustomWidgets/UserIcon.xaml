<UserControl x:Class="ExtremLink_Client_v2.CustomWidgets.UserIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremLink_Client_v2.CustomWidgets"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Source="/Images/user_icon_black.png"/>
        <TextBlock x:Name="usernameTextBlock" Grid.Column="1" Text="username" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
