<UserControl x:Class="ExtremLink_Client.Pages.SharingScreenPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremLink_Client.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#00cec9" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock x:Name="sharingScreenTitle" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="70" FontWeight="Bold" Text="Not Sharing Screen" Margin="0,100,0,0"/>

            <Label Content="Local Share Screen:" HorizontalAlignment="Center" FontSize="20" Margin="0,50,0,0"/>
            <Border BorderBrush="Black" BorderThickness="1"  Width="400" Height="225">
                <Image x:Name="frameImg" Width="400" Height="225" />
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
