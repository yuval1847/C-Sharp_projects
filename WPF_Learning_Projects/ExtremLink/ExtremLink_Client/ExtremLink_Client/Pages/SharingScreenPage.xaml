<UserControl x:Class="ExtremLink_Client.Pages.SharingScreenPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremLink_Client.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#031019" Offset="0"/>
                <GradientStop Color="#034045" Offset="0.5"/>
                <GradientStop Color="#026F71" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackPanel>
            <TextBlock x:Name="sharingScreenTitle" VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Foreground = "#00CEC9" FontSize="70" FontWeight="Bold" Text="Not Sharing Screen" Margin="0,100,0,0"/>

            <Label Content="Local Share Screen:" HorizontalAlignment="Center" FontSize="20" Margin="0,50,0,0"
                   Foreground="#00CEC9"/>
            <Border BorderBrush="#00CEC9" BorderThickness="1"  Width="400" Height="225">
                <Image x:Name="frameImg" Width="400" Height="225" />
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
