<UserControl x:Class="ExtremLink_Client.CustomWidgets.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremLink_Client.CustomWidgets"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="120">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources> 
    <Grid Cursor="Hand">
        <Button x:Name="customBtn" Foreground="#00cec9" FontSize="22" Background="#031019" />
    </Grid>
</UserControl>
