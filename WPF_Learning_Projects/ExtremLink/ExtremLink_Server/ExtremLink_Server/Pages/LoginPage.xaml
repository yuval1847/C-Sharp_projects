<UserControl x:Class="ExtremLink_Server.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremLink_Server.Pages"
             xmlns:customWidgets="clr-namespace:ExtremLink_Server.CustomWidgets"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#031019" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="564" Background="Transparent">
            <Image Source="/Images/ExtremLink_Icon.png" Width="150" Height="150" Margin="0,0,0,20"/>
            <TextBlock Text="ExtremLink" FontSize="48" FontWeight="Bold" Foreground="#00cec9" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Waiting for client to login..." FontSize="20" Foreground="#00cec9" HorizontalAlignment="Center" Margin="0,50,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
