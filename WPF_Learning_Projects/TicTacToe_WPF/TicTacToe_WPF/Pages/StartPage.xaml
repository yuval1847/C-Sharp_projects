<UserControl x:Class="TicTacToe_WPF.Pages.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe_WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Tic Tac Toe" FontSize="70" Margin="0,40,0,0"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="PlayBtn" Content="Play" Margin="0,150,0,0" Width="200" Height="80"
                    FontSize="50" Click="PlayBtn_Click"/>
            <Button x:Name="RulesBtn" Content="Rules" Margin="0,50,0,0" Width="200" Height="80"
                    FontSize="50" Click="RulesBtn_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
