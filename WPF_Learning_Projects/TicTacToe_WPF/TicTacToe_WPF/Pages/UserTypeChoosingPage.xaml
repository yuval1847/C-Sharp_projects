<UserControl x:Class="TicTacToe_WPF.Pages.UserTypeChoosingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe_WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Choose your type" Margin="50" FontSize="70" HorizontalAlignment="Center"/>
            <Button x:Name="ServerChoiceBtn" Content="Server - Player X" Width="250" Height="50" FontSize="30" Margin="50" Click="ServerChoiceBtn_Click"/>
            <Button x:Name="ClientChoiceBtn" Content="Client - Player Y" Width="250" Height="50" FontSize="30" Margin="50" Click="ClientChoiceBtn_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
